<UserControl x:Class="AutoBrowserChooser.FileInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <DockPanel>
        <Button Name="uxBrowse" DockPanel.Dock="Right" Padding="10,0,10,0" Click="uxBrowse_Click">Browse...</Button>
        <TextBox Name="uxFileName" DockPanel.Dock="Left" Text="{Binding FileName, ElementName=root}" TextChanged="uxFileName_TextChanged" />
    </DockPanel>
</UserControl>
